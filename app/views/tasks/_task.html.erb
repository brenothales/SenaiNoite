<div class="panel panel-info">
    <div class="panel-heading">
      <%= link_to edit_task_path(task) do %>
         <span class="glyphicon glyphicon-pencil"></span>  <%= time_ago_in_words(task.created_at) %> ago 
      <% end %> 
      <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, task, method: :delete, data: { confirm: 'Are you sure?' }, class:'pull-right' %>
  </div>
    <div class="panel-body"><%= task.content %></div>
    <div class="panel-footer text-center">
      <div class="btn-group btn-group-justified">
      <% if task.state == 'doing' %>
        <%= link_to "<span class='glyphicon glyphicon-arrow-left'></span>".html_safe, change_task_path(task, state: "to_do"), method: :put, class: 'btn btn-info btn-md btn-block' %>
        <%= link_to "<span class='glyphicon glyphicon-arrow-right'></span>".html_safe, change_task_path(task, state: "done"), method: :put, class: 'btn btn-info btn-md btn-block' %>
        <% elsif task.state == 'done'  %>
          <%= link_to "<span class='glyphicon glyphicon-arrow-left'></span>".html_safe, change_task_path(task, state: "doing"), method: :put, class: 'btn btn-info btn-md btn-block' %>
      <% else %>
        <%= link_to "<span class='glyphicon glyphicon-arrow-right'></span>".html_safe , change_task_path(task, state: "doing"), method: :put, class: 'btn btn-info btn-md btn-block' %>
      <% end %>
      </div>
    </div>
</div>